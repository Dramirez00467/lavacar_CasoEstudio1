@model lavacarBLL.Dtos.CitaDto

<!-- Modal Editar Cita -->
<div class="modal fade" id="modalEditarCita" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="formModalLabel">Editar Cita</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formEditarCita" asp-action="EditarCita" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" id="CitaId" />

                    @* Estos hidden preservan el binding del DTO aunque el usuario no pueda cambiarlos *@
                    <input type="hidden" asp-for="IdCliente" id="IdCliente" />
                    <input type="hidden" asp-for="IdVehiculo" id="IdVehiculo" />

                    <div class="form-group mb-3">
                        <label class="form-label">Cliente</label>
                        <input type="text" class="form-control" id="ClienteNombre" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Vehículo</label>
                        <input type="text" class="form-control" id="VehiculoNombre" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Fecha" class="form-label"></label>
                        <input asp-for="Fecha" class="form-control" type="date" id="Fecha" readonly />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Estado" class="form-label"></label>
                        <select asp-for="Estado" class="form-select" id="Estado">
                            <option>Ingresada</option>
                            <option>Cancelada</option>
                            <option>Concluida</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="btnEditarCambios">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
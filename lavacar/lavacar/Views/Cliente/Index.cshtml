@using lavacarBLL.Dtos
@model List<ClienteDto>

@{
    ViewData["Title"] = "Listado de Clientes";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#modalCrearCliente">
    Crear Nuevo Cliente
</button>

<table class="table table-striped" id="tablaClientes">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Identificación</th>
            <th>Edad</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>

@await Html.PartialAsync("Edit")
@await Html.PartialAsync("Create")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Cliente.js" asp-append-version="true"></script>
}
@using lavacarBLL.Dtos
@model VehiculoDto

@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<h1>Eliminar Vehículo</h1>

<h3>¿Estás seguro de que deseas eliminar este vehículo?</h3>

<div>
    <h4>Vehículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Placa</dt>
        <dd class="col-sm-10">@Model.Placa</dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Marca</dd>

        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>

        <dt class="col-sm-2">Año</dt>
        <dd class="col-sm-10">@Model.Anio</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.IdCliente</dd>
    </dl>
</div>

<form asp-action="EliminarVehiculo" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
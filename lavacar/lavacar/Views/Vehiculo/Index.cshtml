@using lavacarBLL.Dtos
@model List<VehiculoDto>

@{
    ViewData["Title"] = "Listado de Vehículos";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#modalCrearVehiculo">
    Crear Nuevo Vehículo
</button>

<table class="table table-striped" id="tablaVehiculos">
    <thead>
        <tr>
            <th>ID</th>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>

@await Html.PartialAsync("Edit")
@await Html.PartialAsync("Create")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Vehiculo.js" asp-append-version="true"></script>
}